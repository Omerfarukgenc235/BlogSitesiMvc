@using Travel.Models.Siniflar
@model List<Hakkimizda>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<div class="content">
    <div class="wrap">
        <div class="about">
            <div align="center"><h3>Hakkımızda</h3></div>
            @foreach (var x in Model)
            {
                <div align="center"><img src="~/web/images/Logomu.png" style="width:300px;height:300px;" alt="resim" /></div>
                <div align="center"><h4>@x.Aciklama</h4></div>
            }
            <div class="about-team">
                <div class="about-text">
                    <div class="about-team">
                        <div class="about-text">
                            <div align="center"><h3 class="ind">Bizleri Youtube'da Takip Edin :)</h3></div>
                            <div align="center">
                                <iframe width="560" height="315" src="https://www.youtube.com/embed/u5wrBSP9sdo" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                <iframe width="1000" height="600" src="https://www.youtube.com/embed/NfZNlW40axM" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                <h3 class="ind">Bu Blog Sitemizde Paylaşacaklarımız</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-md-3 about-team-grids">
                                <div class="thumbnail">
                                    <img src="https://bymmb.com/wp-content/uploads/2019/01/2000px-Python-logo-notext.svg1_.png" style="width:200px;height:200px;" alt="" class="img-responsive" />
                                    <div class="caption">
                                        <h4>Python</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3 about-team-grids">
                                <div class="thumbnail">
                                    <img src="https://miro.medium.com/max/594/1*ymVNbsdd7KxHXHC4-LP7kw.png" style="width:200px;height:200px;" alt="" class="img-responsive" />
                                    <div class="caption">
                                        <h4>C#</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3 about-team-grids">
                                <div class="thumbnail">
                                    <img src="https://i.hizliresim.com/pz681i.jpg" style="width:200px;height:200px;" alt="" class="img-responsive" />
                                    <div class="caption">
                                        <h4>Asp.Net Mvc</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3 about-team-grids">
                                <div class="thumbnail">
                                    <img src="https://blogaktuel.com/assets/files/uploads/e6aec27c3c8f693e2512b3bf999a3808.png" style="width:200px;height:200px;" alt="" class="img-responsive" />
                                    <div class="caption">
                                        <h4>Flutter</h4>
                                    </div>
                                </div>
                            </div>
                          
                            <div class="clearfix"> </div>
                        </div>

                        <div align="center">
                            <h3 class="ind">Geliştirdiğimiz Mobil Uygulamalarımız</h3>
                        </div>

                        <div align="center">
                            <div class="col-sm-6 col-md-3 about-team-grids">
                                <div class="thumbnail">
                                    <img src="https://play-lh.googleusercontent.com/n1I6S2I7ychkOEoveqaEg2knxDBAaKBdepOW_PJitVEqzGxRbJHmEDhmkhvWP7qYPY4=s180-rw" style="width:200px;height:200px;" alt="" class="img-responsive" />
                                    <div class="caption">
                                        <h4>Ondalıklı Sayı Sistemleri Dönüştürme</h4>
                                        <button class="btn btn-success" onclick="location='https://play.google.com/store/apps/details?id=com.Jetfaruk.Sayi'" >Uygulamaya Git</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3 about-team-grids">
                                <div class="thumbnail">
                                    <img src="https://play-lh.googleusercontent.com/utO9YVyJwlm9IGjrSZY5SU3Oubb0_59idQ3YdwZi2Ak1Fk0aE_W92a-1efkPro9rpyE=s180-rw" style="width:200px;height:200px;" alt="" class="img-responsive" />
                                    <div class="caption">
                                        <h4>Uzman Bilgi Yarışması</h4>
                                        <button class="btn btn-success" onclick="location='https://play.google.com/store/apps/details?id=com.GencYazilimcilar.UzmanBilgiYarismasi'" >Uygulamaya Git</button>
                                    </div>
                                </div>
                            </div>


                            <div class="clearfix"> </div>
                        </div>



                        <link href="~/web3/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


